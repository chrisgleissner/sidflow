{
  "name": "sidflow",
  "version": "0.1.0",
  "private": true,
  "license": "GPL-2.0-only",
  "packageManager": "bun@1.3.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun install --frozen-lockfile && bun run wasm:check-upstream && tsc -b",
    "wasm:check-upstream": "bun run scripts/check-libsidplayfp-upstream.ts",
    "wasm:build": "bun run scripts/build-libsidplayfp-wasm.ts",
    "test": "bun run build && bun test --coverage --coverage-reporter=text --coverage-reporter=lcov",
    "test:e2e": "bun run build && bun test ./integration-tests/e2e-suite.ts && cd packages/sidflow-web && bun run test:e2e",
    "test:all": "bun run test && cd packages/sidflow-web && bun run test:e2e",
    "validate:config": "bun run scripts/validate-config.ts",
    "validate:feedback": "bun run scripts/validate-feedback.ts",
    "fetch:sample": "bun run scripts/run-fetch-sample.ts",
    "classify:sample": "bun run scripts/run-classify-sample.ts",
    "ci:verify": "bun run validate:config && bun run fetch:sample && bun run classify:sample && bun run test:e2e",
    "format:json": "bun run scripts/format-json.ts",
    "build:db": "bun run scripts/build-db.ts",
    "release:prepare": "bun run scripts/ci/release-prepare.ts --",
    "changes:entry": "bun run scripts/ci/extract-changes-entry.ts",
    "check:packages": "bun run scripts/ci/check-packages.ts"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "bun-types": "^1.3.1",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "vectordb": "^0.21.2"
  }
}