{
  "name": "@sidflow/web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node ../../scripts/run-bun.mjs run build:worklet && next dev",
    "build": "node ../../scripts/run-bun.mjs run build:worklet && next build",
    "build:worklet": "node ../../scripts/run-bun.mjs run scripts/build-worklet.ts",
    "start": "next start",
    "lint": "eslint",
    "test": "node ../../scripts/run-bun.mjs test tests/unit/",
    "pretest:e2e": "node ./scripts/ensure-playwright-browser.mjs",
    "test:e2e": "playwright test",
    "test:e2e:coverage": "COVERAGE=true playwright test",
    "test:all": "npm run pretest:e2e && node ../../scripts/run-bun.mjs test tests/unit/ && playwright test",
    "test:perf": "npm run pretest:e2e && SIDFLOW_RUN_PERF_TESTS=1 playwright test tests/e2e/performance.spec.ts --workers=1",
    "test:a11y": "npm run pretest:e2e && playwright test tests/e2e/accessibility.spec.ts",
    "coverage:merge": "nyc merge .nyc_output .nyc_output/coverage.json",
    "coverage:report": "nyc report --reporter=lcov --reporter=text --reporter=html",
    "coverage:e2e": "npm run test:e2e:coverage && npm run coverage:merge && npm run coverage:report"
  },
  "dependencies": {
    "@ffmpeg/core": "0.11.0",
    "@ffmpeg/ffmpeg": "0.11.6",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@sidflow/classify": "workspace:*",
    "@sidflow/common": "workspace:*",
    "@sidflow/libsidplayfp-wasm": "workspace:*",
    "@tensorflow/tfjs": "^4.22.0",
    "bcrypt": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "ffmpeg-static": "^5.2.0",
    "hls.js": "^1.5.11",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.552.0",
    "next": "16.0.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@playwright/test": "^1.48.0",
    "@tailwindcss/postcss": "^4",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-loader": "^10.0.0",
    "babel-plugin-istanbul": "^7.0.1",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "fake-indexeddb": "^5.0.2",
    "istanbul-lib-coverage": "^3.2.2",
    "nyc": "^17.1.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "v8-to-istanbul": "^9.3.0",
    "vite-plugin-istanbul": "^7.2.1"
  }
}